#Jet Fighter
import turtle
from turtle import *

# Functions

#this function uses the turtle.listen() function and tells the
#game what to do when abuttonn is pressed. It also moves the plane forward
def movement():
    jet.forward(FORWARD_SPEED)
##    fighter.forward(FORWARD_SPEED)
    turtle.onkey(turn_left1,"Left")
    turtle.onkey(turn_right1,"Right")
    turtle.onkey(forward1,"Up")
    turtle.onkey(shoot1,"Down")
    
    turtle.onkey(turn_left2,"a")
    turtle.onkey(turn_right2,"d")
    turtle.onkey(forward2,"w")
    turtle.onkey(shoot2,"s")

#this function occurs when the left arrow key is pressed.
#it takes no parameters but uses two global variables, jet turning
#angle and ltd. It subtracts frum the jet turning angle
def turn_left1():
    global jetturningangle, ltd
    ltd = ltd+1
    if ltd == 1 and jetturningangle == 0:
        jetturningangle = 11
    if jetturningangle == 0:
        jetturningangle = 11
    else:
        jetturningangle = jetturningangle-1
        
    jet.left(HEADING_STEP)
    turtle.addshape(name=jetturn[jetturningangle], shape=None) 
    jet.shape(jetturn[jetturningangle])


#This functions occurs when the right arrow key is pressed. It has
#no parameters but uses the global variable jet turning angle
#It adds to jet turning angle and turns the plan right 30 degrees
def turn_right1():
    global jetturningangle
    if jetturningangle <= 11:
        jetturningangle = jetturningangle+1
    if jetturningangle == 12:
        jetturningangle = 0
    jet.right(HEADING_STEP)
    turtle.addshape(name=jetturn[jetturningangle], shape=None) 
    jet.shape(jetturn[jetturningangle])    

#this function serves as a kind of boost when the up arrow key is pressed.
#it moves the jet forward 1.5 times the forward speed
def forward1():
    jet.forward(1.5*FORWARD_SPEED)

def shoot1():
    return



def turn_right2():
    global fighterturningangle
    if fighterturningangle <= 11:
        fighterturningangle = fighterturningangle+1
    if fighterturningangle == 12:
        fighterturningangle = 0
    fighter.right(HEADING_STEP)
    turtle.addshape(name=fighterturn[fighterturningangle], shape=None) 
    fighter.shape(fighterturn[fighterturningangle])   
def turn_left2():
    fighter.left(HEADING_STEP)
def forward2():
    fighter.forward(FORWARD_SPEED)
def shoot2():
    return

# Constants
RIGHT_EDGE= 400
LEFT_EDGE = -400
BOTTOM_EDGE = -400
TOP_EDGE = 400
HEADING_STEP = 30
FORWARD_SPEED = 6


# Global Variables
jetturningangle = 0
ltd = 0

fighterturningangle = 0
#lists
jetturn = ["Jet30.gif", "Jet60.gif", "Jet90.gif", "Jet120.gif", "Jet150.gif", "Jet180.gif", "Jet210.gif", "Jet240.gif", "Jet270.gif", "Jet300.gif", "Jet330.gif", "Jet0.gif"]
fighterturn = ["Fighter30.gif", "Fighter60.gif", "Fighter120.gif", "Fighter150", "Fighter180","Fighter210.gif", "Fighter240.gif", "Fighter270.gif", "Fighter300.gif","Fighter330.gif"]

# Screen
screen = Screen()
screen.title("Jet Fighter")
screen.bgcolor("skyblue")
turtle.bgpic(picname="Sky.gif")
screen.tracer(0)

# Turtles
jet = Turtle()
turtle.addshape(name="Jet0.gif", shape=None) 
jet.shape("Jet0.gif") 
jet.color("black")
jet.penup()
jet.setx(100)

##fighter = Turtle()
##turtle.addshape(name="Fighter.gif", shape=None)
##fighter.shape("Fighter.gif")
##fighter.color("green")
##fighter.setx(-100)


# Game Loop
while(True):
    screen.update()
    turtle.listen()
    movement()

