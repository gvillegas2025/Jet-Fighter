#Jet Fighter
import turtle
from turtle import *

# Functions
def movement():
    turtle.onkey(turn_left1,"Left")
    turtle.onkey(turn_right1,"Right")
    turtle.onkey(forward1,"Up")
    turtle.onkey(shoot1,"Down")
    
    turtle.onkey(turn_left2,"a")
    turtle.onkey(turn_right2,"d")
    turtle.onkey(forward2,"w")
    turtle.onkey(shoot2,"s")

def turn_left1():
    jet1.left(HEADING_STEP)
def turn_right1():
    jet1.right(HEADING_STEP)
def forward1():
    jet1.forward(FORWARD_SPEED)
def shoot1():
    return

def turn_left2():
    jet2.left(HEADING_STEP)
def turn_right2():
    jet2.right(HEADING_STEP)
def forward2():
    jet2.forward(FORWARD_SPEED)
def shoot2():
    return
# Constants
RIGHT_EDGE= 400
LEFT_EDGE = -400
BOTTOM_EDGE = -400
TOP_EDGE = 400
HEADING_STEP = 30
FORWARD_SPEED = 10

# Global Variables

# Screen
screen = Screen()
screen.title("Jet Fighter")
screen.bgcolor("skyblue")
screen.tracer(0)

# Turtles
jet1 = Turtle()
turtle.addshape(name="Jet0.gif", shape=None) 
jet1.shape("Jet0.gif") 
jet1.color("black")
jet1.setx(100)

jet2 = Turtle()
turtle.addshape(name="Jet0.gif", shape=None)
jet2.shape("Jet0.gif")
jet2.color("green")
jet2.setx(-100)

# Game Loop
while(True):
    screen.update()
    turtle.listen()
    movement()
    jet1.shape("Jet0.gif") 
    jet2.shape("Jet0.gif")

# Make sure yall have all the rotations of the plane downloaded on your computer 
